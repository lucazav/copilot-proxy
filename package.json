{
  "name": "copilot-proxy",
  "version": "1.0.2",
  "description": "copilot-proxy for aider",
  "publisher": "PoAI",
  "license": "ISC",
  "author": "Lutz Leonhardt",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/copilot-proxy.git"
  },
  "type": "commonjs",
  "main": "./out/extension.js",
  "files": [
    "out",
    "README.md"
  ],
  "engines": {
    "vscode": "^1.70.0"
  },
  "activationEvents": [
    "onCommand:Copilot Proxy - Start Server",
    "onCommand:Copilot Proxy - Stop Server",
    "onCommand:Copilot Proxy: Configure Port"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Copilot Proxy",
      "properties": {
        "copilotProxy.port": {
          "type": "number",
          "default": 3000,
          "description": "Port for the Express server."
        }
      }
    },
    "commands": [
      {
        "command": "Copilot Proxy - Start Server",
        "title": "Copilot Proxy - Start Server"
      },
      {
        "command": "Copilot Proxy - Stop Server",
        "title": "Copilot Proxy - Stop Server"
      },
      {
        "command": "Copilot Proxy: Configure Port",
        "title": "Copilot Proxy: Configure Port"
      }
    ]
  },
  "scripts": {
    "build": "tsc",
    "start": "ts-node src/server.ts",
    "vsix": "vsce package"
  },
  "dependencies": {
    "dotenv": "^16.0.0",
    "express": "^4.18.2",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.14",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.11.18",
    "@types/vscode": "^1.70.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "@vscode/vsce": "^2.15.0"
  }
}
